<h2>
 ᠵᠠᠰᠠᠬᠤ
  <%= link_to 'ᠠᠵᠢᠯ',user_userjobs_path(@user),class:'header-menu' %>&ensp;
</h2>

<% if @user.userjobs.any? %>
  <%= form_for @userjob, url: user_userjob_path(@user,@userjob) do |f| %>
    <table>
      <tr colspan="2">
        <td colspan="2">
            <%=f.text_area :name,placeholder: '* ᠶᠠᠮᠠᠷ ᠠᠵᠢᠯ', :class=>"gaarea" %>
            <%=f.text_area :from,placeholder: '* ᠨᠠᠷᠢᠨ ᠠᠭᠤᠯᠭ᠎ᠠ', :class=>"gaarea" %>
        </td>
      </tr>
      <tr colspan="2">
        <td colspan="2">
          <p>
            <%= f.file_field :picture, :type=>"file", :id=>"file", :class=>"command"  %>
            <%=f.text_area :job,placeholder: 'ᠲᠠᠨᠢᠯᠴᠠᠭᠤᠯᠭ᠎ᠠ', :class=>"gaarea" %>
          </p>
        </td>
      </tr>
      <tr>
        <td>
             ᠪᠡᠯᠡᠳᠭᠡᠯ ᠮᠥᠩᠭᠦ ᠪᠠᠷᠤᠭ<br>
            <%=f.number_field :f4, step:0.001,placeholder: '1000' %>
            <br>
            <%=f.text_area :unit,placeholder: '* ᠤᠯᠤᠰ', :class=>"bgarea" %><br>ᠵᠣᠭᠤᠰ᠃
        </td>
        <td>
            ᠠᠵᠢᠯᠯᠠᠬᠤ ᠬᠤᠭᠤᠴᠠᠭ᠎ᠠ<br>
            <%= f.date_select :f9, class: "datet", :use_month_numbers => true, datetime_separator:' ',:time_separator => ' ' %>
            ~
            <%= f.date_select :ff9, class: "datet", :use_month_numbers => true, datetime_separator:' ',:time_separator => ' ' %>
        </td>
      </tr>

    </table>
    <%= f.submit "ᠬᠠᠳᠠᠭᠠᠯᠠᠬᠤ", :class=>"btn" %>
  <% end %>
<% end %>
